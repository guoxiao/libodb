# $1  out file
#
# bld_root     - build root
# project_name - project name
#

source $bld_root/dialog.bash

$echo
$echo "Please select the threading implementation:"
$echo
$echo "(1) POSIX"
$echo "(2) Win32"
$echo "(3) None"
$echo

threads=`read_option "posix win32 none" "posix"`

echo "libodb_threads := $threads" >$1
